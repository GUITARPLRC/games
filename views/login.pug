extends layout

block content
	
	.container
		form.form-signin(action='/login' method='POST')
			h2.form-signin-heading Please login in
			label(for="email") Email address
			input(type="email" name="email" class="form-control" required autofocus)
			label(for="password") Password
			input(type="password" name="password" class="form-control" required)
			button.btn.btn-lg.btn-block(type='submit') Log in &#8594;
			
		.container
			form.form-signin(action='/account/forgot' method='POST')
				h2.form-signin-heading Forgot my password
				label(for="email") Email address
				input(type="email" name="email" class="form-control")
				button.btn.btn-lg.btn-block(type='submit') &#8592; Send a Reset
