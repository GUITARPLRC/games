extends layout

block content
	.container
		if data.cover
			if data.cover.cloudinary_id
				img(src=`https://images.igdb.com/igdb/image/upload/t_1080p/${data.cover.cloudinary_id}.jpg`, height=500)
					
		if data.name
			h3= data.name
			
		if data.release_dates
			if data.release_dates[1]
				if data.release_dates[1].human
					h5 Release Date: #{h.dateFormat(data.release_dates[1].human)}
				else
					h5 Release Date: Not Available
			else if data.release_dates[0]
				if data.release_dates[0].human
					h5 Release Date: #{h.dateFormat(data.release_dates[0].human)}
			else 
				h5 Release Date: Not Available
		else
			h5 Release Date: Not Available
			
		if data.esrb
			if data.esrb.synopsis
				p= data.esrb.synopsis
		else if data.summary
			p= data.summary
			
		if data.screenshots
			h4 Screen Shots
			.list-group.screenshots
				for each in data.screenshots
					.list-group-item.list-group-item-action.screenshot(data-toggle='modal', data-target='.bs-example-modal-lg')
						img(src=`https://images.igdb.com/igdb/image/upload/t_thumb/${each.cloudinary_id}.jpg`, data-target='#modal')
		else
			p
				strong Sorry, no images available at this time
				
		//- FIXME
			if games
				h3 Similar Games
					.list-group.similarGames
						for each in games
							a(href=`${each.id}`).list-group-item.list-group.item.action.similarCover
								if each.name
									h5= each.name
								if each.cover
									img(src=each.cover.url)
		//
				
	#modal.modal.fade.bs-example-modal-lg
		.modal-dialog.modal-lg
			.modal-content
				.modal-header
					button.close(type='close', data-dismiss='modal', aria-hidden='true') &times;
				.modal-body
					img#modalContainer
